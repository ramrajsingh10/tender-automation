{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: frontend dev",
      "type": "shell",
      "command": "npm",
      "args": ["run", "frontend:dev"],
      "options": {
        "cwd": ""
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "npm: lint",
      "type": "shell",
      "command": "npm",
      "args": ["run", "lint"],
      "options": {
        "cwd": ""
      },
      "problemMatcher": []
    },
    {
      "label": "gcloud: deploy api-public",
      "type": "shell",
      "command": "gcloud",
      "args": [
        "run",
        "deploy",
        "api-public",
        "--source",
        "./services/api-public",
        "--region",
        "us-central1",
        "--allow-unauthenticated"
      ],
      "options": {
        "cwd": ""
      },
      "problemMatcher": []
    },
    {
      "label": "gcloud: deploy api-private",
      "type": "shell",
      "command": "gcloud",
      "args": [
        "run",
        "deploy",
        "api-private",
        "--source",
        "./services/api-private",
        "--region",
        "us-central1",
        "--no-allow-unauthenticated"
      ],
      "options": {
        "cwd": ""
      },
      "problemMatcher": []
    },
    {
      "label": "python: test api-public",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "python -m pip install -r services/api-public/requirements.txt; python -m pip install pytest; pytest services/api-public"
      ],
      "options": {
        "cwd": ""
      },
      "problemMatcher": []
    },
    {
      "label": "python: test api-private",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "python -m pip install -r services/api-private/requirements.txt; python -m pip install pytest; pytest services/api-private"
      ],
      "options": {
        "cwd": ""
      },
      "problemMatcher": []
    }
  ]
}